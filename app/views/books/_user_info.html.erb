<div class="col-md-3">
  <h2>User info</h2>
    <% if user.profile_image.attached? %>
    <%= image_tag user.get_profile_image(100,100) %>
    <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
    <% end %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <a class="btn btn-outline-secondary btn-block" href="/users/<%= current_user.id %>/edit">
      <i class="fas fa-user-cog"></i>
    </a>
  </div>
  <div class="row">
    <h2 class="mt-3">New Book</h2>
    <%= form_with model: @book , url: books_path, method: :post do |book| %>
    <div class="form-group">
      <label class="book_title">Title</label>
      <%= book.text_field :title %>
    </div>
    <div class="form-group">
      <label class="book_opinion">Opinion</label>
      <%= book.text_area :opinion %>
    </div>
    <div class="form-group">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    </div>
    <% end %>
  </div>
</div>