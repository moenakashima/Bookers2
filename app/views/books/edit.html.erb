<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |book| %>
      <div class="form-group">
        <label class="book_title">Title</label>
        <%= book.text_field :title, autofocus: true, id: "book_title", class: "form-control book_title" %>
      </div>
      <div class="form-group">
        <label class="book_opinion">Opinion</label>
        <%= book.text_area :body, autofocus: true, id: "book_body",class: "form-control book_body"  %>
      </div>
      <div class="form-group">
        <%= book.submit 'Update Book', class: "btn btn-success" %>
      </div>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %>
      <a>|</a>
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>